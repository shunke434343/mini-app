.sign-title
  %h2.sign-title Log in
.sign-container
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .form
      = f.label :email, class: 'form-label'
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-feild', placeholder: 'メールアドレス'
    .form
      = f.label :password, class: 'form-label'
      %br/
      = f.password_field :password, autocomplete: "current-password", class: 'form-feild', placeholder: 'パスワード'
    - if devise_mapping.rememberable?
      .form
        = f.check_box :remember_me
        = f.label :remember_me
    .bottun
      = f.submit "Log in", class: 'form-bottun'
  = render "devise/shared/links"
